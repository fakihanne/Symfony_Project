{% extends 'base.html.twig' %}

{% block title %}Liste Ndongoyi{% endblock %}

{% block body %}
    <h1>Listou Ndongoyi</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.Prenom }}</td>
                <td>{{ etudiant.Nom }}</td>
                <td>{{ etudiant.Adresse }}</td>
                <td>
                    <a href="{{ path('etudiant_show', {'id': etudiant.id}) }}">show</a>
                    <a href="{{ path('etudiant_edit', {'id': etudiant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('etudiant_new') }}" class="btn btn-success">Ajouter un ndongo</a>
{% endblock %}